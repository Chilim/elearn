<h2>Создать учетную запись</h2>
{{#if errors}}
			{{#each errors}}

			{{/each}}
{{/if}}
<form id="regForm" method="post" action="/users/register">
	<div>
		<label>Тип учетной записи</label>
		<select name="type">
			<option value="student">Ученик</option>
			<option value="instructor">Учитель</option>
		</select>
	</div>
	<br />
	<div>
		<label>Имя: </label>
		<input type="text" name="first_name" value="{{first_name}}">
	</div><br />
	<div>
		<label>Фамилия: </label>
		<input type="text" name="last_name" value="{{last_name}}">
	</div><br />
	<div>
		<label>Улица: </label>
		<input type="text" name="street_address" value="{{street_address}}">
	</div><br />
	<div>
		<label>Город: </label>
		<input type="text" name="city" value="{{city}}">
	</div><br />
	<div>
		<label>Страна: </label>
		<input type="text" name="state" value="{{state}}">
	</div><br />
	<div>
		<label>Индекс: </label>
		<input type="text" name="zip" value="{{zip}}">
	</div><br />
	<div>
		<label>Email: </label>
		<input type="text" name="email" value="{{email}}">
	</div><br />
	<div>
		<label>Username: </label>
		<input type="text" name="username" value="{{username}}">
	</div><br />
	<div>
		<label>Пароль: </label>
		<input type="password" name="password" value="{{password}}">
	</div><br />
	<div>
		<label>Подтверждение пароля: </label>
		<input type="password" name="password2" value="{{password2}}">
	</div><br />
	<div>
		<input type="submit" value="Сохранить">
	</div>
</form>